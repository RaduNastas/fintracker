<configuration>
    <!-- Вывод только в файл -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/fintracker.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Уровень логирования для пакета com.fintracker -->
    <logger name="com.fintracker" level="DEBUG"/>

    <!-- Корневой логгер только с файлом -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>

